{
    "manifest_version": 3,
    "name": "Wordle Helper",
    "description": "This extension will help you determine the words that fit your puzzle",
    "version": "1.6",
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "scripting"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "word-list.json"
            ],
            "matches": [
                "https://www.nytimes.com/*"
            ]
        }
    ],
    "host_permissions": [
        "https://www.nytimes.com/games/wordle/index.html"
    ]
}